{
  "name": "serverless-sharp-image",
  "version": "0.0.1",
  "description": "Serverless-based Lambda function to resize images based on S3 events with the awesome Sharp library",
  "main": "handler.js",
  "config": {
    "jsSrc": "src/"
  },
  "scripts": {
    "test": "ava",
    "watch:test": "ava --watch",
    "lint": "npm run lint:eslint -s && npm run lint:jscs -s",
    "lint:eslint": "eslint $npm_package_config_jsSrc",
    "lint:jscs": "jscs $npm_package_config_jsSrc/",
    "deploy": "npm test && serverless deploy -v",
    "invoke": "serverless webpack invoke --function sharpImage --path ./event.json",
    "serve": "serverless webpack serve",
    "postinstall": "cpy-cli config.sample.json config.json && cpy-cli event.sample.json event.json && targz extract lib/sharp-*.tar.gz lib/sharp"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adieuadieu/serverless-sharp-image.git"
  },
  "keywords": [
    "serverless",
    "sharp",
    "libvips",
    "image",
    "resize",
    "optimize"
  ],
  "author": "Marco LÃ¼thy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/adieuadieu/serverless-sharp-image/issues"
  },
  "homepage": "https://github.com/adieuadieu/serverless-sharp-image",
  "dependencies": {
    "aws-sdk": "2.6.10",
    "babel-runtime": "6.11.6",
    "mime-types": "2.1.12",
    "sharp": "0.16.1",
    "sprintf-js": "1.0.3"
  },
  "devDependencies": {
    "ava": "0.16.0",
    "babel-core": "6.17.0",
    "babel-eslint": "7.0.0",
    "babel-loader": "6.2.5",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-polyfill": "6.16.0",
    "babel-preset-es2015": "6.16.0",
    "babel-preset-es2016": "6.16.0",
    "babel-preset-es2017": "6.16.0",
    "babel-preset-stage-3": "6.17.0",
    "babel-register": "6.16.3",
    "copy-webpack-plugin": "3.0.1",
    "cpy-cli": "1.0.1",
    "eslint": "3.8.1",
    "eslint-config-airbnb-base": "9.0.0",
    "eslint-plugin-ava": "3.1.1",
    "eslint-plugin-import": "2.0.1",
    "eslint-plugin-promise": "3.3.0",
    "jscs": "3.0.7",
    "json-loader": "0.5.4",
    "serverless": "1.0.2",
    "serverless-webpack": "1.0.0-rc.2",
    "tar.gz": "1.0.5",
    "webpack": "1.13.2",
    "webpack-node-externals": "1.5.4"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "babel": {
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      "es2015",
      "es2016",
      "es2017",
      "stage-3"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "ava",
      "import"
    ],
    "extends": [
      "airbnb-base",
      "plugin:ava/recommended"
    ],
    "settings": {
      "import/parser": "babel-eslint",
      "import/resolve": {
        "moduleDirectory": [
          "node_modules",
          "src"
        ]
      }
    },
    "rules": {
      "no-console": 0,
      "semi": [
        "error",
        "never"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "space-before-function-paren": [
        "error",
        "always"
      ]
    }
  },
  "jscsConfig": {
    "preset": "airbnb",
    "excludeFiles": [
      "node_modules/**",
      "**/build/**",
      "**/node_modules/**"
    ],
    "requireSemicolons": false,
    "disallowSpacesInNamedFunctionExpression": false,
    "disallowSpacesInFunctionDeclaration": false
  }
}
